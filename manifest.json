{
    "name"           : "mdash",
    "version"        : "0.5.1",
    "description"    : "A minimal dashboard replacing the \"New Tab\" page which syncs with your bookmarks.",
    "icons": {
        "16":  "img/favicon.ico",
        "48":  "img/icon48.png",
        "128": "img/icon128.png"
    },
    "permissions": [
        "bookmarks",
        "chrome://favicon/*"
    ],
    "chrome_url_overrides" : {
        "newtab" : "html/dashboard.html"
    },
    "update_url" : "http://romac.me/mdash/updates.xml"
}